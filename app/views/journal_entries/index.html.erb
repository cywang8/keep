<div class="page-header">
  <h1>
    Journal entries
    <a href="/journal_entries/new" class="btn btn-lg btn-success">New Journal entry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date of link</th>
        <th>Type of link</th>
        <th>Friend first name</th>
        <th>Friend last name</th>
        <th>Reason</th>
        <th>Notes</th>
        <th>User</th>
        <th>Friend</th>
        <th>Actions</th>
      </tr>

      <% @journal_entries.each do |journal_entry| %>
      <tr>
        <td><%= journal_entry.date_of_link %></td>
        <td><%= journal_entry.type_of_link %></td>
        <td><%= journal_entry.friend_first_name %></td>
        <td><%= journal_entry.friend_last_name %></td>
        <td><%= journal_entry.reason %></td>
        <td><%= journal_entry.notes %></td>
        <td><%= journal_entry.user_id %></td>
        <td><%= journal_entry.friend_id %></td>
        <td>
          <a href="/journal_entries/<%= journal_entry.id %>" class="btn btn-primary">Show</a>
          <a href="/journal_entries/<%= journal_entry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_journal_entry/<%= journal_entry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
