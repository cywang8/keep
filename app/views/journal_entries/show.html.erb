<div class="page-header">
  <h3>Journal Entry #<%= @journal_entry.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Date of link</dt>
      <dd><%= @journal_entry.date_of_link %></dd>

      <dt>Type of link</dt>
      <dd><%= @journal_entry.type_of_link %></dd>

      <dt>Friend first name</dt>
      <dd><%= @journal_entry.friend_first_name %></dd>

      <dt>Friend last name</dt>
      <dd><%= @journal_entry.friend_last_name %></dd>

      <dt>Reason</dt>
      <dd><%= @journal_entry.reason %></dd>

      <dt>Notes</dt>
      <dd><%= @journal_entry.notes %></dd>

      <dt>User</dt>
      <dd><%= @journal_entry.user_id %></dd>

      <dt>Friend</dt>
      <dd><%= @journal_entry.friend_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/journal_entries" class="btn btn-primary">
        Back
      </a>
      <a href="/journal_entries/<%= @journal_entry.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_journal_entry/<%= @journal_entry.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
