<div class="page-header">
  <h1>
    Friends and families
    <a href="/friends_and_families/new" class="btn btn-lg btn-success">New Friends and family</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Relationship</th>
        <th>Birthday</th>
        <th>Current city</th>
        <th>Current employer or school</th>
        <th>Address</th>
        <th>Picture</th>
        <th>Phone number</th>
        <th>Actions</th>
      </tr>

      <% @friends_and_families.each do |friends_and_family| %>
      <tr>
        <td><%= friends_and_family.first_name %></td>
        <td><%= friends_and_family.last_name %></td>
        <td><%= friends_and_family.relationship %></td>
        <td><%= friends_and_family.birthday %></td>
        <td><%= friends_and_family.current_city %></td>
        <td><%= friends_and_family.current_employer_or_school %></td>
        <td><%= friends_and_family.address %></td>
        <td><%= friends_and_family.picture %></td>
        <td><%= friends_and_family.phone_number %></td>
        <td>
          <a href="/friends_and_families/<%= friends_and_family.id %>" class="btn btn-primary">Show</a>
          <a href="/friends_and_families/<%= friends_and_family.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_friends_and_family/<%= friends_and_family.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
